            </div>

        </div>
    </div>
    <!-- //banner -->

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 col-xs-12 col-md-6 col-sm-12" style="padding:20px;">
                <h2>Ảnh Của Sản Phẩm</h2>
                <div>
                    <img id="ImgShowChinh" src="@Model.anhsanpham1" style="height:70%; top:0px;width:100%;" />
                    <div style="height:18%; padding-top:2%;width:100%;">
                        <img src="@Model.anhsanpham2" id="ImgShowMat1" style="height:100%; width:23%;" />
                        <img src="@Model.anhsanpham3" id="ImgShowMat2" style="height:100%; width:23%;" />
                        <img src="@Model.anhsanpham4" id="ImgShowMat3" style="height:100%; width: 23%;" />
                        <img src="@Model.anhsanpham5" id="ImgShowMat4" style="height:100%; width: 23%;" />
                    </div>
                    <div style="height:10%; padding-top:2%;width:100%;">
                        <input type="file" accept="image/*" name="image" id="filechinh" class="inputfile " />
                        <label id="Imgchinh" for="filechinh" class="btn btn-default">ảnh Chính</label>
                        <input type="file" accept="image/*" name="file" id="file1" class="inputfile " />
                        <label id="Imgmat1" for="file1" class="btn btn-default">ảnh Mặt 1</label>
                        <input type="file" accept="image/*" name="file" id="file2" class="inputfile " />
                        <label id="Imgmat2" for="file2" class="btn btn-default">ảnh Mặt 2</label>
                        <input type="file" accept="image/*" name="file" id="file3" class="inputfile " />
                        <label id="Imgmat3" for="file3" class="btn btn-default">ảnh Mặt 3</label>
                        <input type="file" accept="image/*" name="file" id="file4" class="inputfile " />
                        <label id="Imgmat4" for="file4" class="btn btn-default">ảnh Mặt 4</label>
                    </div>
                </div>
            </div>
            <div class=" col-lg-6 col-xs-12 col-md-6 col-sm-12" style="float:left;">
                <div class=" col-lg-12 col-xs-12 col-md-12 col-sm-12">
                    <input type="number" id="ID_product_Supplier" placeholder="Mã id Của Sản Phẩm" style="width:30%; margin:1%" value="@Model.idSP" />
                    <input type="submit" id="btn_share_Product" value="Tìm Kiếm" class="fa fa-share btn btn-danger" style="width:20%;float:left; margin:1%" />
                </div>
                <b><i>Cơ Bản</i></b>
                <input type="text" id="name_product" placeholder="Tên Sản Phẩm" style=" width:100%;" value="@Model.tensp" />
                <input type="number" id="length_product" placeholder="Chiều Dài (Mét)" style=" width:30%;" value="@Model.dai" />
                <input type="number" id="with_product" placeholder="Chiều Rộng (Mét)" style=" width:30%;" value="@Model.rong" />
                <input type="number" id="height_product" placeholder="Chiều Cao (Mét)" style=" width:30%;" value="@Model.cao" />
                <input type="text" id="title_product" placeholder="Tiêu Đề Sản Phẩm" style=" width: 100%;" value="@Model.tieude" />
                <input type="number" id="number_product" placeholder="Số Lượng (Chiếc)" style=" width:100%;" value="@Model.soluong" />
                <input id="ncc_them_hethang" type="checkbox" placeholder="Hết Hàng" style=" width:3%;" />
                <label for="ncc_them_hethang">Hết Hàng</label><br />
                <b><i>Thông Số</i></b>
                <input type="number" id="core_product" placeholder="Số Lõi Lọc" style=" width:100%;" value="@Model.soLoiLoc" />
                <input type="number" id="producttion_product" placeholder="Công Xuất (KW/H)" style=" width:100%;" value="@Model.congxuat" />
                <input type="number" id="speed_product" placeholder="Tốc Độ Lọc (Lít/H)" style=" width:100%;" value="@Model.tocdoloc" />
                <input type="text" id="technology_product" placeholder="Công Nghệ Kháng Khuẩn" style=" width:100%;" value="@Model.congnghekhangkhuan" />
                <input type="number" id="pump_product" placeholder="Công Xuất Bơm (Lít/H)" style=" width:100%;" value="@Model.congXuatBom" />
                <b><i>Giá Cả</i></b>
                <input type="number" id="price_product" placeholder="Giá (Đồng)" style=" width:100%;" value="@Model.gia" />
                <input type="text" id="free_product" placeholder="Mã Giảm Giá" style=" width:65%;" value="@Model.magiamgia" />
                <input type="number" id="number_free_product" placeholder="Số Phần Trăm" style=" width: 30%;" value="@Model.sophantram" />
                <b><i>Nguồn Gốc</i></b>
                <input type="text" id="brand_product" placeholder="Thương Hiệu" style=" width:100%;" value="@Model.thuongHieu" />
                <input type="text" id="quality_product" placeholder="Chất Lượng" style=" width:100%;" value="@Model.chatluong" />
                <input type="text" id="where_production" placeholder="Nơi Sản Xuất" style=" width:100%;" value="@Model.noisanxuat" />
            </div>
        </div>
    </div>
    <div class="container-fluid" style="padding:3%;">
        <div class="row">
            <input type="submit" id="ChinhSuaProduct" value="Chỉnh Sửa" class=" col-lg-6 col-xs-12 col-md-6 col-sm-12 btn btn-success" style="width:80%; margin:1% 10%;" />
        </div>
    </div>

    <div class="footer-bottom wtrhee-agileinfo">
        <div class="container">

            <p class="col-md-6 copy">Máy Lọc Nước Sơn Trần  | Design  <a href="">HaiNam</a></p>
